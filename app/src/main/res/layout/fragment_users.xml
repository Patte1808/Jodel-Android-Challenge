<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp">

    <LinearLayout
        android:id="@+id/user_profile_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ls_username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/ls_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ls_username_label"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ls_email_label"
                android:layout_width="wrap_content"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ls_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ls_email_label"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ls_user_profiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>